@model HUB.Models.EWallet

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this EWallet?</h3>
<div>
    <h4>Confirm Deletion</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EWPin" class="control-label"></label>
                    <input asp-for="EWPin" class="form-control" required/>
                    <span asp-validation-for="EWPin" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </div>
            </form>
        </div>
    </div>
</div>
